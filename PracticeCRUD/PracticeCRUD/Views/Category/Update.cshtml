@model PracticeCRUD.Models.Category

<form class="form-control" method="post">
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Category Id</label>
        <input type="text" class="form-control" id="" asp-for="CategoryId" placeholder="Category Id" readonly>
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Category Name</label>
        <input type="text" class="form-control" id="" asp-for="CategoryName" placeholder="Category Name">
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-outline-primary" asp-controller="Category" asp-action="Update">Update</button>
        <button type="submit" class="btn btn-outline-danger" style="margin-left:1px" asp-controller="Category" asp-action="Delete">Delete</button>
    </div>
