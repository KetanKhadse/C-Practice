@model PracticeCRUD.ViewModels.ProductViewModel
<div class="col-lg-4"></div>
<div class="col-lg-6"> 
<form class="form-control" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Product Name</label>
        <input type="text" class="form-control" id="" asp-for="ProductName" placeholder="Product Name">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Product Description</label>
        <input type="text" class="form-control" id="" asp-for="ProductDescription" placeholder="Product Name">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Color</label>
        <input type="text" class="form-control" id="" asp-for="Color" placeholder="Product Color">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Product Price</label>
        <input type="text" class="form-control" id="" asp-for="Price" placeholder="Product Price">
    </div>
    <div class="mb-3">
        <label for="formFileMultiple" class="form-label">Multiple files input example</label>
        <input class="form-control" type="file" id="formFileMultiple" asp-for="image" name="imagefile" >
    </div>
    <div class="input-group mb-3">
        <label class="input-group-text" for="inputGroupSelect01">Category</label>
        <select class="form-select" id="inputGroupSelect01" asp-for="CategoryId">
            <option selected>Choose...</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-outline-primary">Submit</button>

    </div>
</form>
</div>
<div class="col-lg-4"></div>