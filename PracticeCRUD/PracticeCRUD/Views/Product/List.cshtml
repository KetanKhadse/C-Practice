@{
}
@model List<PracticeCRUD.Models.Product>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Product Id</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Color</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Image</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th scope="row">@product.Id</th>
                <td>@product.ProductName</td>
                <td>@product.ProductDescription</td>
                <td>@product.Color</td>
                <td>@product.Price</td>
                <td><img src="@Url.Content(product.image)" alt=" product Image" style="max-width:150px;max-height:150px;" /></td>
                <td>
                    <a class="btn btn-outline-primary" style=" margin-right:1px;" asp-route-id="@product.Id" asp-controller="Product" asp-action="Update">Edit</a>

                </td>
            </tr>
        }

    </tbody>
</table>
